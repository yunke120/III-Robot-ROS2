    <gazebo reference="back_left_p2">
        <material>Gazebo/White</material>
    </gazebo>
    <gazebo reference="back_right_p2">
        <material>Gazebo/White</material>
    </gazebo>
    <!-- motor -->
    <gazebo reference="front_left_motor">
        <material>Gazebo/FlatBlack</material>
    </gazebo>
    <gazebo reference="front_right_motor">
        <material>Gazebo/FlatBlack</material>
