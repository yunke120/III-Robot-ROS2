    <gazebo reference="base_link_2">
        <material>Gazebo/Grey</material>
    </gazebo>
    <gazebo reference="base_link_3">
        <material>Gazebo/Grey</material>
    </gazebo>
    <!-- wheel -->
    <gazebo reference="front_left">
        <material>Gazebo/White</material>
    </gazebo>
    <gazebo reference="front_right">
        <material>Gazebo/White</material>
    </gazebo>
    <gazebo reference="back_left">
